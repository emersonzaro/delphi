{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);

var
  x, y, recebe: Real;

begin

  x := StrToFloat(Edit1.Text);
  y := StrToFloat(Edit2.Text);

  begin
    if (Edit2.Text) <> (Edit1.Text) then
    begin
      recebe := x;
      x := y;
      y := recebe;
    end;

  end;




  // ShowMessage('O valor original de X é:  ' + Edit1.Text +
  // 'O valor original de Y é: ' + Edit2.Text);


  // ShowMessage('O valor X é:  ' +FloatToStr(recebe));

  // ShowMessage('O valor Y é:  ' +FloatToStr(recebe));

end;

end.

