unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    Label1: TLabel;
    edPolegadas: TEdit;
    Label2: TLabel;
    lbMilimetros: TLabel;
    Button1: TButton;
    Label3: TLabel;
    Label4: TLabel;
    edMilimetros: TEdit;
    Button2: TButton;
    lbPolegadas: TLabel;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);

var
  polegada, milimetro, fator_conversao: Real;

begin

polegada:=StrToFloat(edPolegadas.Text);

  if (Trim(edPolegadas.Text)) = '' then
  begin
    ShowMessage('Valor não pode ser vazio');
    edPolegadas.SetFocus;
    

  end

  else
    fator_conversao := 25.4;
  polegada := StrToFloat(edPolegadas.Text);
  milimetro := (polegada * fator_conversao);
  lbMilimetros.Caption := FloatToStr(milimetro);
end;

procedure TForm2.Button2Click(Sender: TObject);

var
  polegada, milimetro, fator_conversao: Real;

begin
  fator_conversao := 25.4;
  milimetro := StrToFloat(edMilimetros.Text);
  polegada := (milimetro / fator_conversao);
  lbPolegadas.Caption := FloatToStr(polegada);

end;

end.
